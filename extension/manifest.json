{
  "manifest_version": 3,
  "name": "LegalGuard",
  "version": "1.0",
  "description": "Detects and explains legal terms on any webpage. Get instant alerts about privacy policies, terms of service, and legal risks.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "LegalGuard",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "permissions": ["contextMenus","storage","tabs","sidePanel"],
  "side_panel": { "default_path": "sidepanel.html" },
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["glossary_toast.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["glossary_tri.json", "glossary_multilingual.json", "css/toast.css", "icons/1024.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "lg-open-panel": {
      "suggested_key": { "default": "Alt+L" },
      "description": "Open LegalGuard side panel"
    }
  }
}